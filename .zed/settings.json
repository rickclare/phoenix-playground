{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "elixir": "html",
          "heex": "html"
        },
        "experimental": {
          "configFile": "assets/tailwind.config.js",
          "classRegex": [
            "\\bclass:\\s*['\"]([^'\"]*)['\"]",
            "\\b[a-z]+_class=['\"]([^'\"]*)['\"]",
            "\\bicon=['\"](hero-[^'\"]*)['\"]",
            "\\bicon=['\"](phosphor-[^'\"]*)['\"]"
          ]
        }
      }
    }
  }
}
